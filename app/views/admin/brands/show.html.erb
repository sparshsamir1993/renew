<p>
  <strong>Name:</strong>
  <%= @brand.name %>
</p>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @models.each do |model| %>
      <tr>
        <td><%= model.name %></td>
        <td><%= link_to 'Show', admin_model_path(id:model, brand_id:@brand) %></td>
        <td><%= link_to 'Edit', edit_admin_model_path(id:model, brand_id: @brand) %></td>
        <td><%= link_to 'Destroy', admin_model_path(model), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
